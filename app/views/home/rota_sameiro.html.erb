		<div class="row">
			<div class="col-12">
		        <a>
		            <h2 class="text-center title_rotas">Rota do Sameiro</h2>
		        </a>  
			</div>
		</div>

		<div id="wrapper">
    		<div id="left">
    			<div class="row">
    				<div class="col-12">
                        <%= image_tag ("rotas/sameiro.png"), class:"image_rota" %></div>
    			</div>
    		</div>
    		<div id="right">
    			<div class="row">
    				<div class="col-12">
    					<h1 class="types_rotas"><b style="padding-right: 5px;">Distância: </b> 14,5 kms </h1>
